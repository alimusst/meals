{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "comma-dangle": "off",
    "no-else-return": "off",
    "prefer-promise-reject-errors": "off",
    "operator-linebreak": "off"
  }
}
